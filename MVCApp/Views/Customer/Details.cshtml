@model MVCApp.Models.Customer
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<table class=" table table-bordered table-hover">
    <thead>
        <tr>
            <td><h5>Details</h5></td>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                    <h2>@Model.Name</h2><em>@Model.Email</em>
                    @if (!Model.BirthDate.IsEmpty())
                    {
                        <em>@Model.BirthDate</em>


                    }
                    
                </td>
            </tr>
         
    </tbody>
</table>
