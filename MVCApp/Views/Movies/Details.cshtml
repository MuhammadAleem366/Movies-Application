@model MVCApp.Models.Movie
@{
    ViewBag.Title = "Details";
}

<h2>@ViewBag.Title</h2>
<table class=" table table-bordered table-hover">
    <thead>
        <tr>
            <td><h2>@Model.Name</h2></td>
        </tr>
    </thead>
    <tbody>
      
            <tr>
                <td>
                    <h6>Genre: <em>@Model.Genre.Name</em></h6>
                    <h6>Release Date: <em>@Model.ReleaseDate</em></h6>
                    <h6>Date Added: <em>@Model.DateAdded</em></h6>
                    <h6>In Stock: <em>@Model.InStock</em></h6>
                </td>
            </tr>
        
    </tbody>
    <tfoot>
        <tr>
            <td>
                <button class="btn btn-lg btn-danger">@Html.ActionLink("Edit","MovieForm","Movies",new { id = Model.Id},new {@style="text-decoration:none;color:white;" })</button>
            </td>
        </tr>
    </tfoot>
</table>
